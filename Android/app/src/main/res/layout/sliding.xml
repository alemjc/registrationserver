<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_maps"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/map"
    android:layout_gravity="bottom"
    android:elevation="10dp"
    android:orientation="vertical"
    >
    <SlidingDrawer android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:handle="@+id/handle"
        android:content="@+id/content">

        <EditText
            android:id="@id/handle"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@id/content"
            android:background="@color/textIcons"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_workout_session_type"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:id="@+id/privateSessionButton"
                        android:src="@mipmap/ic_person_round"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Private Session"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:id="@+id/groupSessionButton"
                        android:src="@mipmap/ic_people_round"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Session"/>

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>


    </SlidingDrawer>
</LinearLayout>